{%  set classes = [
    'general-purpose-component--default-banner'
] %}

<div {{ attributes.addClass(classes) }}>
	<div class="banner-content">
		{% if content.field_body_with_summary %}
			{{ content.field_body_with_summary }}
		{% endif %}
		{% if content.field_link %}
			{{ content.field_link }}
		{% endif %}
	</div>
	<div class="banner-image">
		{% if content.field_image %}
			{{content.field_image}}
		{% endif %}
	</div>
</div>